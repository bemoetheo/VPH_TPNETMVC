@using TPLOCAL1.Models
@model List<Opinion>

<head>
    <link rel="stylesheet" href="~/resources/Form.css" />
    <title>HN - TP LOCAL - FORM</title>
</head>
<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Liste avis</h1>
    </header>
    <nav>
        <ul>
            <li><a href="/">Accueil</a></li>
            <li><a href="/Home/Index/Form">Formulaire</a></li>
        </ul>
    </nav>
    <section>
        <table>
             <tr>
                <th colspan="3" class="tableTitle">Liste</th>
            </tr>
            <tr>
                <td>Nom</td>
                <td>Prénom</td>
                <td>Avis donné</td>
            </tr>
            @foreach (var opinion in Model)
            {
                <tr>
                
                    <td>@opinion.LastName</td>
                    <td>@opinion.FirstName</td>
                    @if (@opinion.OpinionGiven == "O")
                    {
                        <td class="avisDonne">Oui</td>
                    }
                    else
                    {
                        <td class="avisNonDonne">Non</td>
                    }

                </tr>
            }
        </table>
    </section>
</body>
